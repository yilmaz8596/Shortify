<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shortify.Client.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
@{
    var isAuthPage = (ViewData["AuthPage"] as bool?) ?? false;
}
<body class="@(isAuthPage ? "auth-layout" : "")">
    <header>
        <partial name="_NavigationBar.cshtml"/>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    @{
        // allow views to hide the footer by setting ViewData["HideFooter"] = true
        var hideFooter = ViewData["HideFooter"] as bool? ?? false;
    }

    @if (!hideFooter)
    {
        <footer class="border-top footer text-muted py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-0">&copy; 2025 - Shortify - Your trusted URL shortener</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <a href="#" class="text-muted me-3">Terms</a>
                        <a href="#" class="text-muted">Privacy</a>
                    </div>
                </div>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
